pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{ // Setting up the build environment in a Docker container
                    image 'node:18-alpine'
                    reuseNode true // workspace will be reused across stages
                }
            }
            steps {
                sh '''
                    ls -la
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage ('Test') {
            steps {
                echo 'Test stage'
                sh 'test -f build/index.html'
            }
        }

    }

}